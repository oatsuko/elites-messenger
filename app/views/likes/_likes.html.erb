<% if user_signed_in? %>
  <% if timeline.like_user(current_user.id) %>
    <%= button_to timeline_like_path(like, timeline_id: timeline.id), method: :delete, id: "like-button", remote: true do %>
      <%= image_tag("icon_red_heart.svg") %>
      <span>
        <%= timeline.like_count %>
      </span>
    <% end %>
  <% else %>
    <%= button_to timeline_likes_path(timeline), id: "like-button", remote: true do %>
      <%= image_tag("icon_heart.svg") %>
      <span>
        <%= timeline.like_count %>
      </span>
    <% end %>
  <% end %>
<% else %>
  <% = image_tag("icon_heart.svg") %>
    <span>
      <%= timeline.like_count %>
    </span>
<% end %>